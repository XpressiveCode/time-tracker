extends layout

block content
    h2 Select a Space
    hr
    ul.list-group
        if spaces
            - each space in spaces
                li.list-group-item
                    a(href='/spaces/#{space.id}' title='#{space.name}')= space.name
                        span.pull-right.badge(class='#{space.state}')= space.tickets.length
                        small= space.due_date

