extends layout
block content
    h2 Select a Ticket
    hr
    ul.list-group
        if tickets.length
            - each ticket in tickets
                li.list-group-item
                    a(href='/spaces/#{space_id}/tickets/#{ticket.id}' title='Work on Ticket')= ticket.summary
                        span.pull-right.badge(class='#{ticket.state}') &nbsp;
                        small #{ticket.due_date_str}
        else
            h4 There are no tickets assigned to you in this space